{
  "manifest_version": 2,
  "name": "chrome_extensions",
  "description": "谷歌浏览器插件",
  "version": "0.0.1",
  "icons": {
    "16": "img/coffeeBoy.jpg",
    "48": "img/coffeeBoy.jpg",
    "128": "img/coffeeBoy.jpg"
  },
  "background": {
    "scripts": [
      "event-page.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "谷歌浏览器插件",
    "default_popup": "popup.html",
    "default_icon": "img/coffeeBoy.jpg"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.baidu.com/*"
      ],
      "css": [
        "css/content-scripts.css"
      ],
      "js": [
        "js/content-scripts.js"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "contextMenus",
    "tabs",
    "notifications",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources": [
    "inject.js",
    "fonts/*"
  ],
  "homepage_url": "https://www.baidu.com",
  "options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "default_locale": "zh_CN",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}